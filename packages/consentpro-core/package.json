{
  "name": "@consentpro/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core consent banner logic and styles for ConsentPro",
  "main": "dist/consentpro.min.js",
  "module": "dist/consentpro.esm.js",
  "types": "dist/consentpro.d.ts",
  "style": "dist/consentpro.min.css",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "scripts": {
    "build": "rollup -c && pnpm build:css",
    "build:css": "sass src/scss/main.scss dist/consentpro.css --style=compressed --no-source-map && postcss dist/consentpro.css -o dist/consentpro.min.css",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "rollup": "^4.29.1",
    "rollup-plugin-dts": "^6.1.1",
    "sass": "^1.83.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1"
  },
  "keywords": [
    "consent",
    "banner",
    "gdpr",
    "ccpa",
    "cookie",
    "privacy"
  ],
  "author": "ConsentPro Team",
  "license": "UNLICENSED"
}
